{
  "name": "home-automation-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/home-automation-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "dev",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "home-automation-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "dev": {
          "buildTarget": "home-automation-api:build:dev",
          "watch": true
        },
        "prd": {
          "buildTarget": "home-automation-api:build:prd"
        }
      }
    },

    "docker-db": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "open -a Docker",
          "docker build -f ./apps/home-automation-api/db/Dockerfile . -t home_automation_api_mongo:0.1",
          "docker run --detach --name=home_automation_api_mongo --publish 27017:27017 home_automation_api_mongo:0.1"
        ],
        "parallel": false
      }
    },

    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/home-automation-api/Dockerfile . -t home-automation-api"
    }
  }
}
